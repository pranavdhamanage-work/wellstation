# WellStation Backend Environment Variables Template
# Copy this file to .env.development and .env.production and fill in the actual values
# Then add these as GitHub Secrets for CI/CD builds

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wellstation
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Flask Configuration
FLASK_ENV=development
PORT=3001
SECRET_KEY=your-secret-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION_HOURS=24

# Email Configuration (if using email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@wellstation.com

# YouTube API (if using YouTube resources)
YOUTUBE_API_KEY=your-youtube-api-key-here

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_FOLDER=./media

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wellstation.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Other Configuration
DEBUG=False
TIMEZONE=UTC

